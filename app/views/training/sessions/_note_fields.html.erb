<%= f.fields_for :notes do |ff| %>
  <% unless ff.object.persisted? %>
    <div class="form-group row">
      <%= ff.label :feedback, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= ff.text_area :comment, class: 'form-control' %>
        <% if ff.object.errors.include? :comment %>
          <div class="small text-danger">
            Feedback <%= ff.object.errors[:comment].join(', ') %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= ff.label :staff_comments, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= ff.text_area :staff_comment, class: 'form-control' %>
        <% if ff.object.errors.include? :staff_comment %>
          <div class="small text-danger">
            Staff comments <%= ff.object.errors[:staff_comment].join(', ') %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
